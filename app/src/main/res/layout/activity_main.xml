<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#0099cc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:orientation="vertical"
    app:defaultNavHost="true"
    app:navGraph="@navigation/nav_graph"
    tools:context=".activity.MainActivity">

    <RelativeLayout
        android:id="@+id/ll_main"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_main"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <Button
            android:id="@+id/btn_livedata_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_main"
            android:background="#FFF"
            android:textSize="12sp"
            tools:ignore="MissingConstraints" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/ll_camera"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_camera"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <cn.lxyhome.jetpackcamerax.view.MyButton
            android:id="@+id/btn_camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:layout_below="@+id/img_camera"
            android:text="Camera"
            android:textSize="12sp"
            tools:ignore="MissingConstraints" />

    </RelativeLayout>

    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/ll_card_insert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"
            android:id="@+id/img_insert_card"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <Button
            android:id="@+id/btn_insert"
            android:text="录入Card"
            android:background="#fff"
            android:textSize="12sp"
            android:layout_below="@+id/img_insert_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />

    </RelativeLayout>


    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/ll_user_insert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"
            android:id="@+id/img_insert_user"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <Button
            android:id="@+id/btn_user"
            android:text="录入User"
            android:background="#fff"
            android:textSize="12sp"
            android:layout_below="@id/img_insert_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />

    </RelativeLayout>



</LinearLayout>