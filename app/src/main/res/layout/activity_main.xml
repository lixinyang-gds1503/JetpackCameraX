<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity"
    app:defaultNavHost="true"
    app:navGraph="@navigation/nav_graph">

    <LinearLayout
        android:id="@+id/ll_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0099cc"
        android:orientation="vertical"
        android:padding="5dp">

        <RelativeLayout
            android:id="@+id/ll_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_main"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />

            <Button
                android:id="@+id/btn_livedata_test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_main"
                android:background="@android:color/white"
                android:textSize="12sp"
                tools:ignore="MissingConstraints" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/ll_camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_camera"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />

            <cn.lxyhome.jetpackcamerax.view.MyButton
                android:id="@+id/btn_camera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_camera"
                android:background="@android:color/white"
                android:text="Camera"
                android:textSize="12sp"
                tools:ignore="MissingConstraints" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ll_card_insert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_insert_card"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />

            <Button
                android:id="@+id/btn_insert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_insert_card"
                android:background="@android:color/white"
                android:text="录入Card"
                android:textSize="12sp"
                tools:ignore="MissingConstraints" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/ll_user_insert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_insert_user"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />

            <Button
                android:id="@+id/btn_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_insert_user"
                android:background="@android:color/white"
                android:text="录入User"
                android:textSize="12sp"
                tools:ignore="MissingConstraints" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ll_menulist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_menulist"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />

            <Button
                android:id="@+id/btn_menulist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_menulist"
                android:background="@android:color/white"
                android:text="录入User"
                android:textSize="12sp"
                tools:ignore="MissingConstraints" />

        </RelativeLayout>


    </LinearLayout>
</ScrollView>
